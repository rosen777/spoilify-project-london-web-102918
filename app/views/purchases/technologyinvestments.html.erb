<h1 style= "color:#85bb65">Technology Investments</h1>

    <% @technologyinvestments.each do |technologyinvestment| %>
      <div class="card">
        <a href="/investments/<%= technologyinvestment.id %>">
          <img src="<%= technologyinvestment.imgsrc %>" alt="purchase Picture" height="115" width="175">
        </a>
        <p><a href="/investments/<%= technologyinvestment.id %>"><%= technologyinvestment.name %></a></p>
        <p>Current Price: <%= technologyinvestment.price %></p>
        <p>Industry Sector: <%= technologyinvestment.sector %></p>
      </div>
    <% end %>
